mixin feedback-form
  form.feedback-form(action='https://echo.htmlacademy.ru' method='post' target='_blank')&attributes(attributes)
    h2.visually-hidden Напишите нам!
    .feedback-form__body
      +text-field('Ваше имя:', 'name', 'text', '', 'Имя Фамилия', true)(class='form__item')
      +text-field('Ваш e-mail:', 'email', 'email', '', 'email@example.com', true)(class='form__item')
      +textarea('Текст письма:', 'text', '', 'В свободной форме', true)(class='form__item feedback-form__textarea')
    .feedback-form__footer
      .feedback-form__error-text-wrapper
      +main-button('button', 'Отправить', 'submit')(class='main-button--primary')
