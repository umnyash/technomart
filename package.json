{
  "name": "technomart",
  "version": "1.0.0",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --custom-syntax postcss-scss",
    "eslint": "eslint source/js/",
    "lint": "npm run editorconfig && npm run stylelint && npm run eslint",
    "start": "gulp",
    "build": "gulp --production",
    "preview": "gulp --production && gulp startServer"
  },
  "author": "umnyash",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.0.0",
    "autoprefixer": "10.4.14",
    "browser-sync": "2.29.1",
    "del": "7.0.0",
    "eslint": "8.40.0",
    "eslint-config-htmlacademy": "9.1.1",
    "gulp": "4.0.2",
    "gulp-if": "3.0.0",
    "gulp-libsquoosh": "1.1.2",
    "gulp-newer": "1.4.0",
    "gulp-plumber": "1.2.1",
    "gulp-postcss": "9.0.1",
    "gulp-pug": "5.0.0",
    "gulp-rename": "2.0.0",
    "gulp-sass": "5.1.0",
    "gulp-sass-glob": "1.1.0",
    "gulp-stacksvg": "2.0.1",
    "gulp-svgmin": "4.1.0",
    "postcss-csso": "6.0.1",
    "postcss-scss": "4.0.6",
    "sass": "1.62.0",
    "stylelint": "14.16.1",
    "stylelint-config-htmlacademy": "1.1.4",
    "webpack": "5.82.0",
    "webpack-stream": "7.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not op_mini all",
    "not < 0.25%"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/pug/**/*.pug",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.scss"
  ],
  "engines": {
    "node": ">=16.13.0"
  }
}
